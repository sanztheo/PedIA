# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/pedia?schema=public"

# ============================================
# REDIS (Cache + BullMQ)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# VECTOR DB (choisir un)
# ============================================
# Option 1: pgvector (inclus dans PostgreSQL Railway)
# Rien a configurer, utilise DATABASE_URL

# Option 2: Qdrant (si migration future)
# QDRANT_URL="http://localhost:6333"
# QDRANT_COLLECTION="pedia_embeddings"

# ============================================
# AI (choisir un ou plusieurs)
# ============================================
# Option 1: Google Gemini (recommande)
GOOGLE_GENERATIVE_AI_API_KEY=""

# OpenAI (IMPORTANT pour embedding)
OPENAI_API_KEY=""

# Option 3: Anthropic Claude
ANTHROPIC_API_KEY=""

# ============================================
# WEB SEARCH API (au choix)
# ============================================
# Option 1: Brave Search
BRAVE_API_KEY=""

# Option 2: Serper (Google)
SERPER_API_KEY=""

# Option 3: Tavily
TAVILY_API_KEY=""

# ============================================
# SERVER
# ============================================
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# ============================================
# EMBEDDINGS (choisir un)
# ============================================
# Option 1: OpenAI (recommande) - text-embedding-3-small
# Utilise OPENAI_API_KEY ci-dessus

# Option 2: Google - text-embedding-004
# Utilise GOOGLE_GENERATIVE_AI_API_KEY ci-dessus

# Option 3: Voyage AI - voyage-3 (meilleur multilingue)
# VOYAGE_API_KEY=""

# Modele par defaut (si OpenAI)
EMBEDDING_MODEL="text-embedding-3-small"
